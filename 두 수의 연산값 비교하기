class Solution {
    public int solution(int a, int b) {
        int answer = 0;
        
        // Integer.parseInt : 정수 변환
        // 정수 + "" : 문자열 변환
        // 삼항연산자 이용하여 둘 중 더 큰 값 비교하여 결과 구하기
        answer = (Integer.parseInt(a + "" + b + "") > (2 * a * b)) ? Integer.parseInt(a + "" + b + "") : (2 * a * b);        
        return answer;
    }
}
