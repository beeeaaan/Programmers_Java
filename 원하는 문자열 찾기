class Solution {
    public int solution(String myString, String pat) {
        int answer = 0;
        
        // contains는 대소문자 구분하므로 toUpperCase로 변환하여 비교
        if(myString.toUpperCase().contains(pat.toUpperCase())) {
            answer = 1;
        } else {
            answer = 0;
        }
        return answer;
    }
}
