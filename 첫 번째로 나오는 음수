class Solution {
    public int solution(int[] num_list) {
        int answer = -1;  // 음수 없을 경우
        
        for(int i = 0; i < num_list.length; i++) {
            if(num_list[i] < 0) {  // 0보다 작으면 음수
                answer = i;  // 인덱스 번호
                break;
            }
        }
        return answer;
    }
}
